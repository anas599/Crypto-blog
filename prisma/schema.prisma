generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin-arm64", "linux-arm64-openssl-3.0.x", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  createdAt   DateTime      @default(now())
  email       String        @unique
  name        String?
  password    String
  CoinComment CoinComment[]
  Comment     Comment[]
}

model Work {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  content   String
}

model Comment {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  content       String
  authorId      Int
  upvote        Int      @default(0)
  downvote      Int      @default(0)
  coincommentId String
  author        User     @relation(fields: [authorId], references: [id])
}

model CoinComment {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  content       String
  authorId      Int
  coincommentId String
  upvote        Int      @default(0)
  downvote      Int      @default(0)
  author        User     @relation(fields: [authorId], references: [id])
}
